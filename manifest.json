{
  "name": "Fast Panopto",
  "version": "1.20",
  "description": "Allows user to choose a video speed beyond the defaults allowed by Panopto.",
  "permissions": ["activeTab", "declarativeContent", "storage", "downloads"],
  "background": {
    "scripts": ["background.js"],
    "persistent":false
  },
  "content_scripts": [
    {
      "matches": ["*://*.panopto.com/*"],
      "js": ["pageDOMParser.js"]
    }
  ],
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon.png",
      "32": "images/icon.png",
      "48": "images/icon.png",
      "128": "images/icon.png"
    }
  },
  "icons": {
    "16": "images/icon.png",
    "32": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  },
  "manifest_version": 2
}
